{
  "extends": "@cu-forum/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@cu-forum/ui": ["../../packages/ui/src/*"],
      // "@cu-forum/store": ["../../packages/store/src/*"],
      // "@cu-forum/auth": ["../../packages/auth/src/*"],
      // "@cu-forum/trpc": ["../../packages/trpc/src/*"],
      "@cu-forum/convex": ["../../packages/convex-backend/*"],
      "@cu-forum/common": ["../../packages/common/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
